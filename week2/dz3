import java.util.Scanner;
 
public class Main {
   
    public static void main(String[] args) {
        Scanner reader = new Scanner(System.in);
        
        System.out.print("Введите число: ");
       int num1 = reader.nextInt();
int num2;
       
             if (num1<0) {
                 num2=-num1;
            System.out.print(num2);
        }
         else {
             num2=0;
              System.out.print(num2);
        
    }
}
}
