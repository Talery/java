import java.util.Scanner;
 
public class Main {
   
    public static void main(String[] args) {
           
        Scanner in = new Scanner(System.in);
        System.out.print("Введите число: ");
        int num = in.nextInt();
          
        System.out.printf("Вы ввели число: %d", num);
        in.close();
    }
}
